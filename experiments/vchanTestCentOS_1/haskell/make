#!/bin/bash
all=true

if [ "$1" == "speed" ]; then
  ghc SpeedTest_DomU.hs ../common/common.c -L/usr/lib64 -lxenvchan -lxenctrl
  ghc SpeedTest_Dom0.hs ../common/common.c -L/usr/lib64 -lxenvchan -lxenctrl
else
  ghc Client.hs ../common/common.c -L/usr/lib64 -lxenvchan -lxenctrl
  ghc Mgr.hs ../common/common.c -L/usr/lib64 -lxenvchan -lxenctrl
fi
